{
  "manifest_version": 2,
  "name": "Meethub Public Desktop Streamer",
  "description": "An extension that allows to stream your desktop into Meethub Public Conferences.",
  "version": "0.1.6",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "jitsi-logo-16x16.png",
    "48": "jitsi-logo-48x48.png",
    "128": "jitsi-logo-128x128.png"
  },
  "background": {
        "scripts": [ "background.js" ],
        "persistent": true
  },
  "permissions": [
      "desktopCapture"
  ],
  "externally_connectable": {
      "matches": [
          "*://public.meethub.org/*"
      ]
  }
}
